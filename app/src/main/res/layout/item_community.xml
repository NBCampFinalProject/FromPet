<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearlayout_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_tag"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/community_walk"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:chipBackgroundColor="@color/deep_green"
            app:chipEndPadding="8dp"
            app:chipIcon="@drawable/splash"
            app:chipIconEnabled="true"
            app:chipStartPadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="제목"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_tag" />

        <TextView
            android:id="@+id/tv_contents_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="내용 내용 내용"
            android:textColor="#A6A1A1"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_comm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/community_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="9dp"
                android:text="서울 송파구"
                android:textColor="@color/dark_gray" />


                <ImageView
                    android:id="@+id/thumbs_tp_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/thumbsup" />

                <TextView
                    android:id="@+id/thumbs_up_nb"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="9dp"
                    android:text="15"
                    app:layout_constraintStart_toEndOf="@id/thumbs_tp_btn" />

                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/heart_gray"
                    app:layout_constraintStart_toEndOf="@+id/thumbs_up_nb" />

                <TextView
                    android:id="@+id/like_nb"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="9dp"
                    android:text="38"
                    app:layout_constraintStart_toEndOf="@+id/like_btn" />


        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"
            android:backgroundTint="@color/dark_pink"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group"
            app:layout_scrollFlags="scroll|exitUntilCollapsed" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>