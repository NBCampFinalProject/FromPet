<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient"
            tools:context=".ui.chat.activity.ChatUserDetailActivity">

            <ImageView
                android:id="@+id/iv_pet_profile"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kakaotalk_20230825_222509794_01"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con_container"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_corner"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp">

            <ImageView
                android:id="@+id/iv_pet_name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"

                android:src="@drawable/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:text="@string/activity_detail_petname"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pet_name"
                app:layout_constraintStart_toEndOf="@+id/iv_pet_name"
                app:layout_constraintTop_toTopOf="@+id/iv_pet_name" />

            <ImageView
                android:id="@+id/iv_pet_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/type"
                app:layout_constraintStart_toStartOf="@+id/iv_pet_name"
                app:layout_constraintTop_toBottomOf="@+id/iv_pet_name" />

            <TextView
                android:id="@+id/tv_pet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"

                android:text="@string/activity_detail_pettype"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pet_type"
                app:layout_constraintStart_toEndOf="@+id/iv_pet_type"
                app:layout_constraintTop_toTopOf="@+id/iv_pet_type" />

            <ImageView
                android:id="@+id/iv_pet_age"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/age"
                app:layout_constraintStart_toStartOf="@+id/iv_pet_type"
                app:layout_constraintTop_toBottomOf="@+id/iv_pet_type" />
            <TextView
                android:id="@+id/tv_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"

                android:text="@string/activity_detail_petage"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pet_age"
                app:layout_constraintStart_toEndOf="@+id/iv_pet_age"
                app:layout_constraintTop_toTopOf="@+id/iv_pet_age"
                />

            <ImageView
                android:id="@+id/iv_pet_gender"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/gender"
                app:layout_constraintStart_toStartOf="@+id/iv_pet_age"
                app:layout_constraintTop_toBottomOf="@+id/iv_pet_age" />
            <TextView
                android:id="@+id/tv_pet_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginStart="10dp"
                android:text="@string/activity_detail_petgender"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pet_gender"
                app:layout_constraintStart_toEndOf="@+id/iv_pet_gender"
                app:layout_constraintTop_toTopOf="@+id/iv_pet_gender"
                />


            <ImageView
                android:id="@+id/iv_pet_des"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/des"
                app:layout_constraintStart_toStartOf="@+id/iv_pet_gender"
                app:layout_constraintTop_toBottomOf="@+id/iv_pet_gender" />
            <TextView
                android:id="@+id/tv_pet_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginStart="10dp"
                android:text="@string/activity_detail_petdes"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pet_des"
                app:layout_constraintStart_toEndOf="@+id/iv_pet_des"
                app:layout_constraintTop_toTopOf="@+id/iv_pet_des"
                />

            <ImageView
                android:id="@+id/iv_pet_intro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"

                android:src="@drawable/intro"
                app:layout_constraintStart_toStartOf="@+id/iv_pet_des"
                app:layout_constraintTop_toBottomOf="@+id/iv_pet_des" />
            <TextView
                android:id="@+id/tv_label_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginStart="10dp"
                android:text="@string/activity_detail_petintro"
                app:layout_constraintBottom_toBottomOf="@+id/iv_pet_intro"
                app:layout_constraintStart_toEndOf="@+id/iv_pet_intro"
                app:layout_constraintTop_toTopOf="@+id/iv_pet_intro"
                />







        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/back_btn"
            android:padding="1dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="10dp"
            android:src="@drawable/back"
            android:layout_gravity="top|start" />
        <ImageView
            android:id="@+id/dislike_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hate"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="60dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart"
            android:layout_marginTop="225dp"
            android:layout_marginStart="60dp"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

</ScrollView>
