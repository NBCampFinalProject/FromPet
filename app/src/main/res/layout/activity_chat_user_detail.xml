<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            tools:context=".ui.chat.ChatUserDetailActivity">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="13dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_pet_profile"
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_name_label"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/lightPink"
                app:layout_constraintStart_toStartOf="@+id/card_view"
                app:layout_constraintTop_toBottomOf="@+id/card_view">

                <TextView
                    android:id="@+id/tv_label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="@string/activity_detail_label_names"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/activity_detail_petname"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/cardView_name_label"
                app:layout_constraintTop_toBottomOf="@+id/cardView_name_label" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_type_label"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/lightPink"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="@+id/card_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_pet_name">

                <TextView
                    android:id="@+id/tv_label_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/activity_detail_label_type"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/activity_detail_pettype"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/cardView_type_label"
                app:layout_constraintTop_toBottomOf="@+id/cardView_type_label" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_age_label"
                android:layout_width="30dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"

                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/lightPink"
                app:layout_constraintStart_toStartOf="@+id/card_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_pet_type">

                <TextView
                    android:id="@+id/tv_label_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/activity_detail_label_age"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"

                android:text="@string/activity_detail_petage"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/cardView_age_label"
                app:layout_constraintTop_toBottomOf="@+id/cardView_age_label" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_gender_label"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/lightPink"
                app:layout_constraintStart_toStartOf="@+id/card_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_pet_age">

                <TextView
                    android:id="@+id/tv_label_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/activity_detail_label_gender"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pet_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/activity_detail_petgender"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/cardView_gender_label"
                app:layout_constraintTop_toBottomOf="@+id/cardView_gender_label" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_des_label"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightPink"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toStartOf="@+id/card_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_pet_gender">

                <TextView
                    android:id="@+id/tv_label_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/activity_detail_label_des"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pet_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/activity_detail_petdes"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/cardView_des_label"
                app:layout_constraintTop_toBottomOf="@+id/cardView_des_label" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_intro_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightPink"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_pet_des">

                <TextView
                    android:id="@+id/tv_label_intro"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/activity_detail_label_intro"
                    android:textSize="12sp"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_pet_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:text="@string/activity_detail_petintro"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView_intro_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/dislike_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hate"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</FrameLayout>
