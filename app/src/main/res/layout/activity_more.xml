<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="설정"
            android:textColor="@color/main_color"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/setting_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_more_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:text="계정(회원탈퇴)"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_auth"
                app:layout_constraintStart_toEndOf="@+id/iv_more_auth"
                app:layout_constraintTop_toTopOf="@+id/iv_more_auth" />

            <ImageView
                android:id="@+id/iv_more_auth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:src="@drawable/arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/tv_more_auth"
                app:layout_constraintEnd_toEndOf="@+id/bt_more_auth"
                app:layout_constraintHorizontal_bias="0.78"
                app:layout_constraintStart_toEndOf="@+id/tv_more_auth"
                app:layout_constraintTop_toTopOf="@+id/tv_more_auth" />

            <ImageButton
                android:id="@+id/bt_more_auth"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_auth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_more_auth" />


            <TextView
                android:id="@+id/tv_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="비밀번호 변경"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_password_reset"
                app:layout_constraintStart_toEndOf="@+id/iv_more_password_reset"
                app:layout_constraintTop_toTopOf="@+id/iv_more_password_reset" />

            <ImageView
                android:id="@+id/iv_more_password_reset"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_more_auth" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:src="@drawable/arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/tv_friends"
                app:layout_constraintEnd_toEndOf="@+id/ib_more_password_reset"
                app:layout_constraintHorizontal_bias="0.79"
                app:layout_constraintStart_toEndOf="@+id/tv_friends"
                app:layout_constraintTop_toTopOf="@+id/tv_friends"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/ib_more_password_reset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_password_reset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_more_password_reset" />




            <TextView
                android:id="@+id/tv_more_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="서비스 약관"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_service"
                app:layout_constraintStart_toEndOf="@+id/iv_more_service"
                app:layout_constraintTop_toTopOf="@+id/iv_more_service" />

            <ImageView
                android:id="@+id/iv_more_service"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_more_password_reset" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:src="@drawable/arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/tv_more_service"
                app:layout_constraintEnd_toEndOf="@+id/ib_notification"
                app:layout_constraintHorizontal_bias="0.808"
                app:layout_constraintStart_toEndOf="@+id/tv_more_service"
                app:layout_constraintTop_toTopOf="@+id/tv_more_service"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/ib_notification"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_more_service" />


            <TextView
                android:id="@+id/tv_more_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="버전"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_version"
                app:layout_constraintStart_toEndOf="@+id/iv_more_version"
                app:layout_constraintTop_toTopOf="@+id/iv_more_version" />

            <ImageView
                android:id="@+id/iv_more_version"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_more_service" />

            <ImageButton
                android:id="@+id/ib_friends_noti"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_version"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_more_version" />

            <TextView
                android:id="@+id/tv_more_version_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="1.1.0"
                app:layout_constraintBottom_toBottomOf="@+id/iv_more_version"
                app:layout_constraintEnd_toEndOf="@+id/ib_friends_noti"
                app:layout_constraintTop_toTopOf="@+id/iv_more_version" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ib_friends_noti" />

            <ImageButton
                android:id="@+id/bt_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />


            <TextView
                android:id="@+id/tv_more_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="로그아웃"
                android:textSize="15dp"
                android:textColor="@color/hot_pink"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/bt_more"
                app:layout_constraintStart_toEndOf="@+id/bt_more"
                app:layout_constraintTop_toTopOf="@+id/bt_more" />



            <ImageButton
                android:id="@+id/ib_more"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/bt_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bt_more" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="110dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>