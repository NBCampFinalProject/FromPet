<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FromPet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_color</item>// 버튼 색
        <item name="colorPrimaryVariant">@color/secondary_color</item>//상단 바
        <item name="colorOnPrimary">@color/black</item>// 버튼 글씨 색
        <item name="android:textColor">@android:color/black</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/secondary_color</item>
    </style>


    <style name="Theme.FromPet" parent="Base.Theme.FromPet" />


    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>